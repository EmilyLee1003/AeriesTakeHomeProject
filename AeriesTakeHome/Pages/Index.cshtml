@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
  


<form method="POST">
    <div class="text-center" runat="server">
        <h1 class="display-4" runat="sever">Aeries Students</h1>


        <table class="table table-dark" runat="server">
            <thead>
              
            <tr>
                <th scope="col">School Code</th>
                <th scope="col">Student ID</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Address</th>
                <th scope="col">City</th>
                <th scope="col">State</th>
                <th scope="col">Zip Code</th>
                <th scope="col"></th>

            </tr>
        </thead>
            <tbody>
                //go through the list of Students and view them in the first table
                @foreach(var item in Model.listStudents)
            { 
                <tr>

                    <td>@item.SchoolCode</td>
                    <td>@item.StudentID</td>

                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.Address</td>
                    <td>@item.City</td>
                    <td>@item.State</td>
                    <td>@item.ZipCode</td>
                    <td>  <input type="button" value=@item.StudentID asp-page-handler="viewButton" />  </td>
                </tr>

                    }
            </tbody>
    </table>

    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">Student ID</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Relationship</th>
                <th scope="col">Email</th>
                <th scope="col">Mobile</th>
                <th scope="col">Address</th>
                <th scope="col">City</th>
                <th scope="col">State</th>
                <th scope="col">Zip Code</th>
                <th scope="col"></th>

            </tr>
        </thead>
        <tbody>
            // go through the listSelected data and view them in the second table 
            @foreach(var item in Model.listSelected)

            {
            <tr>
                <td>@item.Student_ID</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Relationship</td>
                <td>@item.Email</td>
                <td>@item.Mobile</td>
                <td>@item.Address</td>
                <td>@item.City</td>
                <td>@item.State</td>
                <td>@item.ZipCode</td>
            </tr>
            }
        </tbody>
    </table>




</div>

</form>